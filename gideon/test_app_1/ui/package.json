{
    "name": "react-material-ui-starter",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.8.3",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/lab": "^4.0.0-alpha.41",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "axios": "^0.19.1",
        "classnames": "^2.2.6",
        "husky": "^4.2.0",
        "immer": "^9.0.6",
        "lint-staged": "^10.0.2",
        "lodash": "^4.17.15",
        "prettier": "^1.19.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.1.3",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.4.1",
        "react-scroll": "^1.7.15",
        "redux": "^4.0.5",
        "redux-saga": "^1.1.3"
